                            #Eid(hidden='') #{data.RPQ}
                            #Mbs(hidden='') #{data.Mbs}
                            #Cnt(hidden='') #{data.Cnt}
                            p.cost Precio: #{data.Amount} Dash
                            p.costBs #{data.AmountBsS} BsS
                            p.itemdesc #{data.InvoiceID}
                            #QR
                                #RAddress
                                #mainHexButton
                                    #HexButton
                                        button#bot(title='Haga click aqui para copiar la direcion',onclick="copyThat()")
                                        input#HexAddr(type='text', value=`${data.SimpleAddress}`,readonly) 
                            #dashText 
                                .SubDashText
                                    p.PrevTextToken Paga con    
                                    a.dashTextUp(href='https://dashtext.io/',target="_blank")
                                //p.dashTextDown
                                p.TextToken Compra #{data.TextToken}
                            #dashHelp          
                                p.dashHelpUp     
                                p.dashHelpDown 
                            #dashSupport
                                a.dashSC(href='https://dashhelpme.io/',target="_blank")
                                a.dashSCPN(href='tel:+582127201174')                 
