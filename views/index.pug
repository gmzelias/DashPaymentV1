extend layout.pug

block content
    #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-body
            #mainback
                #top
                    .imagelogo
                    .countdown
                        span#time
                |
                .row
                    #mainmiddle           
                        - var IsError = `${data.validated}`
                        if IsError == 'address' 
                            p.itemdesc There was an error generating address, please try again.
                            script(type='text/javascript').
                                $('#exampleModal').modal('show');
                        if IsError == 'currency' 
                            p.itemdesc There was an error with the currency, please try again.
                            script(type='text/javascript').
                                $('#exampleModal').modal('show');
                        if IsError == 'headers' 
                            p.itemdesc Missing request information, please try again.
                            script(type='text/javascript').
                                $('#exampleModal').modal('show');       
                        if IsError == 'query' 
                            p.itemdesc There was an error on the DB, please try again.
                            script(type='text/javascript').
                                $('#exampleModal').modal('show');
                        if IsError == 'true' 
